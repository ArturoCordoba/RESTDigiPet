<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.digipet.prototype.orm.HotelEntity" table="HOTEL" schema="digipet">
        <id name="idHotel">
            <column name="Id_hotel" sql-type="int(11)"/>
        </id>
        <property name="nombre">
            <column name="Nombre" sql-type="varchar(30)" length="30"/>
        </property>
        <property name="direccion">
            <column name="Direccion" sql-type="varchar(300)" length="300"/>
        </property>
        <property name="capacidad">
            <column name="Capacidad" sql-type="int(11)"/>
        </property>
        <property name="descripcion">
            <column name="Descripcion" sql-type="varchar(300)" length="300"/>
        </property>
    </class>
</hibernate-mapping>